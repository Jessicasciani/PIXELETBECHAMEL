<%= simple_form_for(@article) do |f| %>
  <%= f.input :title, class: "form-control" %>
  <%= f.text_area :text, :class => "tinymce", :rows => 40, :cols => 120 %>
  <%= tinymce %>
  <%= f.input :photo, class: "form-control" %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit 'Publier', class: "abtn abtn-lg btn-primary" %>
  <%= f.submit 'Mettre en brouillon', class: "abtn abtn-lg btn-primary" %>
<% end %>

