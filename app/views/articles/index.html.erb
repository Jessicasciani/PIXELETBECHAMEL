
<div class="container">

<div class="hidden-xs">
  <div class="row">
    <% @articles.reverse.each do |article| %>
      <% if article.published == true %>
        <div class="col-md-4 col-xs-12">
          <div class="article">
            <%= cl_image_tag article.photo %>
            <div class="article-text text-center">
              <p><%= article.created_at.strftime("%b %d, %Y") %></p>
              <div class="title-article">
                <h2><%= article.title %></h2>
              </div>
              <p><%= simple_format(article.text.truncate_words(6).html_safe) %></p>
            </div>
            <%= link_to "", article_path(article), class: "link-article" %>
          </div>
        </div>
      <% end %>
      <% if article.published == false && if current_user&.admin %>
        <div class="col-md-4 col-xs-12">
          <p>Mes brouillons</p>
          <div class="article">
            <%= cl_image_tag article.photo %>
            <div class="article-text text-center">
              <p><%= article.created_at.strftime("%b %d, %Y") %></p>
              <div class="title-article">
                <h2><%= article.title %></h2>
              </div>
              <p><%= simple_format(article.text.truncate_words(6).html_safe) %></p>
            </div>
            <%= link_to "", article_path(article), class: "link-article" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>


  <% if current_user&.admin  %>
    <div class="form-cache">
      <%= render 'articles/form', article: @article %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    </div>
  <% end %>

</div>


<div class="hidden-sm hidden-md hidden-lg">
  <% @articles.reverse.each do |article| %>
    <% if article.published == true %>
      <div class="article-xs text-center">
        <%= cl_image_tag article.photo %>
        <div class="article-text text-center">
          <p><%= article.created_at.strftime("%b %d, %Y") %></p>
          <h2 class="title-article"><%= article.title %></h2>
          <p><%= simple_format(article.text) %></p>
        </div>
        <% if current_user&.admin  %>
          <%= link_to article_path(article), method: :delete do %>
            <i class="fa fa-trash-o poub-article" aria-hidden="true"></i>
          <% end %>
          <%= link_to edit_article_path(article), article: @article do %>
            <i class="fa fa-pencil-square-o poub-article"></i>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <% if current_user&.admin  %>
      <div class="form-cache">
        <%= render 'articles/form', article: @article %>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
      </div>
    <% end %>
  <% end %>

</div>


</div>
