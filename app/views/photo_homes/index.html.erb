<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
<!--       <%= image_tag @photo_homes.first.photo  %>
 -->
      <%= image_tag "cappucino.png" %>
    </div>

        <%= image_tag "cappucino.png" %>

  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="formulaires flex">
  <% if current_user&.admin  %>
   <div class="form-cache">
      <p>Ajouter une photo</p>
      <%= render 'photo_homes/form', photo_home: @photo_home %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    </div>
  <% end %>

  <% if current_user&.admin %>
    <% @photo_homes.each do |photo_home| %>
      <div class="form-edit">
        <%= render 'photo_homes/form', photo_home: photo_home, method: :patch%>
      </div>
    <% end %>
  <% end %>
</div>

<%= content_for(:title, "Welcome") %>
