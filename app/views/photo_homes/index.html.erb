<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
  <!-- Indicators -->



    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag @photo_homes[0].photo  %>
    </div>
    <% @photo_homes[1..5].each do |photo_home| %>
      <div class="item">
        <%= image_tag photo_home.photo %>
      </div>
    <% end %>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<% if current_user&.admin %>
<div class="formulaires">
  <div class="row">
    <div class="col-xs-12 col-md-2">
      <p>Ajouter une photo</p>
      <div class="form-home">
        <%= render 'photo_homes/form', photo_home: @photo_home %>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
      </div>
    </div>
      <% @photo_homes.each do |photo_home| %>
        <div class="col-xs-12 col-md-2">
          <p>Modifier</p>
          <div class="form-home">
            <%= render 'photo_homes/form', photo_home: photo_home, method: :patch%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>


<%= content_for(:title, "Welcome") %>
