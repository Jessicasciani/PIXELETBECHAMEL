<div class="text-center">
  <h1><%= @folder.client.capitalize %></h1>
</div>


<div class="container">

  <%= link_to folders_path, class: "bouton-retour" do %>
    <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>
    Retour aux clients
  <% end %>

  <div class="row">
    <div id="thumbs">
      <% @folder.portfolio_photos.reverse.each do |p| %>
        <div class="col-xs-12 col-md-4">
          <div class="outer">
            <a class="inner" href="<%= cl_image_path p.photo %>" style="background-image:url(<%= cl_image_path p.photo %>)"></a>
          </div>
          <% if current_user&.admin  %>
            <%= link_to folder_portfolio_photo_path(@folder, p), method: :delete do %>
              <i class="fa fa-trash-o poub-photo" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

  <% if current_user&.admin  %>
    <div class="form-cache">
      <%= render 'portfolio_photos/form', portfolio_photo: @portfolio_photo %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    </div>
  <% end %>
</div>

<script>

    // Initialize the gallery
    $('#thumbs a.inner').touchTouch();

</script>
