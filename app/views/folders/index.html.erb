<div class="banner-photos" style="background-image: url( <%= image_path "header-photo.jpg" %>);">
  <h1>PORTFOLIO</h1>
  <div class="trait-souligne">
  </div>
</div>

<div class="background-grey">
  <div class="container">
    <div class="hidden-xs hidden-sm">
      <div class="row">
        <% @folders&.each do |f| %>

          <div class="col-xs-12 col-md-6">
            <% if f.photo? %>
              <div class="card-folder">
                <div class="description-card">
                  <p>CLIENT</p>
                  <h2><%= f.client.upcase %></h2>
                  <div style="display:flex; align-items: center;">
                    <hr class="hr-card" align="left" width="30%"><h3>Découvrir</h3>
                  </div>
                </div>
                <%= cl_image_tag f.photo, class: "img-card-folder", width: 800, crop: :limit, fetch_format: :auto, quality: :auto %>
                <%= link_to "", folder_portfolio_photos_path(f), class: "card-link" %>
              </div>
            <% else %>
              <p> prout </p>
            <% end %>
            <% if current_user&.admin %>
              <%= link_to "X", folder_path(f), method: :delete  %>
              <%= link_to "Edit", edit_folder_path(f)  %>
            <% end %>
          </div>

        <% end %>
      </div>
    </div>

    <div class="hidden-md hidden-lg">
      <div class="row">
       <% @folders&.each do |f| %>

          <div class="col-xs-12 col-md-6">
            <% if f.photo? %>
              <div class="card-folder">
                <div class="description-card-xs">
                  <p>CLIENT</p>
                  <h2><%= f.client.upcase %></h2>
                  <div style="display:flex; align-items: center;">
                    <hr class="hr-card" align="left" width="30%"><h3>Découvrir</h3>
                  </div>
                </div>
                <%= cl_image_tag f.photo, class: "img-card-folder-xs", width: 800, crop: :limit, fetch_format: :auto, quality: :auto %>
                <%= link_to "", folder_portfolio_photos_path(f), class: "card-link" %>
              </div>
            <% else %>
              <p> prout </p>
            <% end %>
            <% if current_user&.admin %>
              <%= link_to "X", folder_path(f), method: :delete  %>
              <%= link_to "Edit", edit_folder_path(f)  %>
            <% end %>
          </div>

        <% end %>

      </div>
    </div>



    <% if current_user&.admin  %>
      <div class="form-cache">
        <%= render 'folders/form', folder: @folder %>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
      </div>
    <% end %>

  </div>
</div>
